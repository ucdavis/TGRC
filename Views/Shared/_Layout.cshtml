<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TGRC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TGRC.styles.css" asp-append-version="true" />
</head>
<body>
    <header><a class="navbar-brand" href="https://tgrc.ucdavis.edu"><img src="~/siteImages/tgrc-logo2.png" alt="TGRC Log" style="max-height: 6.25rem;"></a><br>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                                     
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Accession" asp-action="Search">Accession Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Genes" asp-action="Search">Gene Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Images" asp-action="Search">Image Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Maps" asp-action="Index">GIS Maps</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Accession" asp-action="Cluster">Core Collections</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Accession" asp-action="Recent">Recent Acquisitions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Accession" asp-action="Frequent">Frequently Requested</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TGRC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
