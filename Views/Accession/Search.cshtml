@model TGRC.Models.AccessionSearchViewModel

<h3>Accession Search</h3>
<h6>Please enter your search criteria below. All fields are optional; searches are case insensitive; partial text values are allowed; multiple criteria are linked by 'AND'.</h6>
    

<form asp-action="search" method="post">
    <input type="hidden" id="Search" name="Search" value="True">
    <div class="container col-sm-12">
        <div class="row">
            <div class="col-sm-6 border">@* First column*@
                <div class="form-group row">
                    <label asp-for="AccessionNumberToSearch" class="col-sm-3 col-form-label">Accession Number</label>
                    <div class="col-sm-7">
                        <input type="text" asp-for="AccessionNumberToSearch" class="form-control">
                        (enter all or part of the accession number)
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="StatusToSearch" class="col-sm-3 col-form-label">Status</label>
                    <div class="col-sm-3">
                        <select asp-for="StatusToSearch" class="form-select">
                            <option value=""></option>
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                            <option value="Unavailable">Unavailable</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="InspectedSearch" class="col-sm-7 col-form-label">Inspected for International Shipment?</label>
                    <div class="col-sm-2">
                        <select asp-for="InspectedSearch" class="form-select">
                            <option value=""></option>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="OtherIdSearch" class="col-sm-4 col-form-label">Other Identifier</label>
                    <div class="col-sm-4">
                        <input type="text" asp-for="OtherIdSearch" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="SelectedTaxon" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <select asp-for="SelectedTaxon" class="form-select form-select-sm"  asp-items="@(new SelectList(Model.Taxons, "Taxon", "Display"))"></select>                
                    </div>
                </div>
            </div>
            <div class="col-sm-6 border">@* Second column*@

            </div>            
        </div>
        <div>
            <input type="submit" value="Search" class="btn btn-primary"></input> 
        </div>
    </div>

</form>

@if(Model.accessions.Any())
{
    <hr>
    <h3>Results</h3>
    <div>
        @foreach (var acc in Model.accessions)
        {
            <a asp-action="detail" asp-controller="Accession" asp-route-id="@acc.AccessionNum">@acc.AccessionNum</a><br>        
        }
    </div>
}